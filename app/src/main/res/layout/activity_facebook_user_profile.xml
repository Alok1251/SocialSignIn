<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_iconn"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/login_iconnn"
           ></RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fb_profile_pic"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-95dp"
            android:background="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            ></TextView>
        

        <TextView
            android:id="@+id/email"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            ></TextView>

        <Button
            android:id="@+id/logout"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="3mm"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"


            android:drawableLeft="@drawable/fb_logo"
            android:text="Log out"
            android:backgroundTint="@color/white"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"

            android:paddingStart="6dp"
            android:paddingLeft="6dp"></Button>
    </LinearLayout>

</ScrollView>