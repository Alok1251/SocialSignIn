<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login_iconn"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sparks_logo"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:rotation="0"
            android:rotationX="0"
            android:rotationY="0"
            android:src="@drawable/iconssssssss" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Welcome To Login"
            android:textSize="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:gravity="center"

            ></TextView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_below="@id/sparks_logo"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/gmaillogin_button"
            android:layout_width="200dp"
            android:backgroundTint="@color/white"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="20dp"

            android:baselineAligned="false"
            android:drawableLeft="@drawable/google_logo"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="Sign In with Google"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <Button
            android:id="@+id/fblogin_button"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="100dp"

            android:backgroundTint="@color/white"

            android:drawableLeft="@drawable/fb_logo"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="5dp"
            android:paddingStart="6dp"
            android:paddingLeft="6dp"
            android:text="Log In with Facebook"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/link_texts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:gravity="center_horizontal"
            android:text="By clicking on login, you are accepting our privacy policy \nand terms &amp; conditions."
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="From Alok"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>


</RelativeLayout>